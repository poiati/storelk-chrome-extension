{
  "name": "nizi.in",
  "version": "0.10.0",
  "manifest_version": 2,
  "description": "the pragmatic bookmarking system",
  "homepage_url": "http://nizi.in",
  "icons": {
    "128": "icons/icon128.png",
    "19": "icons/icon19.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery-1.8.3.min.js",
      "src/js/omnibox.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "omnibox": {
    "keyword": "n"
  },
  "page_action": {
    "default_icon": "icons/icon19-grayscale.png",
    "default_title": "nizi.in",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "tabs",
    "cookies",
    "http://*.nizi.in/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*.nizi.in/*"],
      "js": ["js/niziin.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*/*"],
      "js": ["js/explorer.js"],
      "run_at": "document_end"
    }
  ]
}
